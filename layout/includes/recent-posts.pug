- 
  let truncateLength = typeof theme.truncate_length === 'number' ? theme.truncate_length : 300

if page.posts.length > 0
  #recent-posts
    h1 Recent Posts
    each post in page.posts.sort('date', -1).limit(10).toArray()
      .recent-post-item
        a(href=config.root + post.path)= post.title
        p.recent-post-abstract= post.abstract
        -let _content = truncateLength === 0 ? null : truncate(strip_html(post.content),{length: truncateLength, omission: '...'})
        p.recent-post-content= _content
        if post.tags.length
          div.recent-post-tags
            - post.tags.forEach(function (tag){
              a(class='post-tag' href='javascript:void(0)' date-tags=tag.name)= tag.name
            - })
        if post.date
          time(datetime=post.date.toJSON())= date(post.date, date_format)

