- 
  let truncateLength = typeof theme.truncate_length === 'number' ? theme.truncate_length : 300

if page.posts.length > 0
  #recent-posts
    each post in page.posts.sort('date', -1).limit(10).toArray()
      .recent-post-item
        a(href=config.root + post.path)= post.title
        if post.date
          time(datetime=post.date.toJSON())= date(post.date, date_format)
        p.recent-post-abstract= post.abstract
        - let _content = null
        - if (post.excerpt) {
          - _content = post.excerpt
        - }else {
          - _content = truncateLength === 0 ? null : truncate(post.content,{length: truncateLength, omission: '...'})
        - }
        div.recent-post-content
          p!= _content
        - if (post.tags.length>0) {
          div.recent-post-tags!= partial('./includes/partial/tag',{currPost: post})
        - }
        hr
        

